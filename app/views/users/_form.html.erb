<% botton_text ||= 'Submit' %>
<%= form_with(model: user, local: true, html: {class: 'ui large form'}) do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="ui left icon input">
      <i class="user icon"></i>
      <%= form.text_field :username, id: :user_username, placeholder: 'user name' %>
    </div>
  </div>

  <div class="field">
    <div class="ui left icon input">
      <i class="lock icon"></i>
      <%= form.password_field :password, id: :user_password, placeholder: 'password' %>
    </div>
  </div>

  <%= form.submit botton_text, class: 'ui fluid large teal submit button' %>
<% end %>
