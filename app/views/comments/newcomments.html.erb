<% content_for :title, 'New Comments' %>

<div class="media">
  <% @comments.each do |comment| %>
    <div class="">
      <%= "#{comment.user.username} #{time_ago_in_words(comment.created_at)} ago | on: #{comment.new.title}" %>
    </div>
    <div class="media-body ml-1">
      <h4 class="media-heading"><%= comment.content %></h4>
    </div>
  <% end %>
</div>
