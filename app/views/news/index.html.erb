<%= content_for :title, "Home Page #{@page}" %>
<p id="notice"><%= notice %></p>

<h1>News</h1>

<div class="media">
  <% @news.each_with_index do |new, index| %>
    <div class="media-body">
      <h4 class="media-heading"><%= "#{@start + index + 1}. #{new.title} (#{new.source}) " %></h4>
    </div>
    <div class="ml-1">
      <%= "by #{new.user.username} #{time_ago_in_words(new.created_at)} ago | #{new.comments.size} comments" %>      
    </div>
    <%= render 'comments/form', comment: new.comments.new %>
  <% end %>
</tbody>

<br>
<% if @has_more %>
  <%= link_to 'More', news_index_path(p: @page + 1) %>
<% end %>
